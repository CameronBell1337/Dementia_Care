<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="30dp"
    app:titleTextAppearance="@font/montserrat_alternates_bold">


    <group android:checkableBehavior="single">
        <item
            android:id="@+id/_HomeMenuItem"
            android:elevation="30dp"
            android:icon="@drawable/ic_outline_home_24"
            android:title="@string/home_name" />
    </group>

    <group android:checkableBehavior="single">
        <item android:title="Information">
            <menu>
                <item
                    android:id="@+id/_resourcesMenuItem"
