<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobilesAppDev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_main_colour</item>
        <item name="colorPrimaryVariant">@color/light_alt_colour</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/light_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Text colour. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimarySurface">@color/light_main_colour</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>


    <style name="toolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>